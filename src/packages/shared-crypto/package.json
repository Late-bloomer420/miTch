{
    "name": "@mitch/shared-crypto",
    "version": "0.1.0",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "clean": "rimraf dist",
        "dev": "tsx watch src/index.ts",
        "build": "tsc -p tsconfig.build.json",
        "test": "vitest run",
        "test:watch": "vitest",
        "lint": "tsc --noEmit",
        "format": "prettier --write \"src/**/*.ts\""
    },
    "dependencies": {
        "jose": "^5.2.0",
        "@mitch/shared-types": "workspace:*"
    },
    "devDependencies": {
        "typescript": "^5.2.0",
        "vitest": "^0.34.0",
        "@types/node": "^20.0.0",
        "eslint": "^8.50.0",
        "prettier": "^3.0.0",
        "rimraf": "^5.0.0"
    }
}

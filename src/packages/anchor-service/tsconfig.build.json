{
    "extends": "../../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "composite": true,
        // Ensure we don't bleed NodeNext unless repo base does
        "module": "NodeNext",
        "moduleResolution": "NodeNext"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test"
    ]
}